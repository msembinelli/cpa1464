{
  "extends": "tslint-config-airbnb",
  "rulesDirectory": [],
  "rules": {
    "max-line-length": {
      "options": [120]
    },
    "no-console": {
      "severity": "warning",
      "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
    },
    "variable-name": [true, "ban-keywords", "check-format"],
    "semicolon": [true, "always", "ignore-bound-class-methods"],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "arrow-parens": [true]
  },
  "jsRules": {
    "max-line-length": {
      "options": [120]
    }
  }
}
